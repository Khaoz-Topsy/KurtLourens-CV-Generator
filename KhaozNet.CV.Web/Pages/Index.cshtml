@using KhaozNet.CV.Domain.Entity
@model KhaozNet.CV.Web.Pages.IndexModel;
@{
    Layout = "./Shared/_Layout.cshtml";
}

<div class="full-page-loader"></div>
<div class="full-page-loader">
    <ul>
        <li style="list-style-type: none;">
            <img src="assets/images/loader.svg" alt="loading-animation">
            <h2 class="largeHeading">Loading</h2>
        </li>
    </ul>
</div>
<div style="display: none">
    <div class="h-card">
        <a class="p-name u-url" href="https://kurtlourens.com/" title="Kurt Lourens">Kurt Lourens</a>
        <img class="u-logo u-photo" src="/assets/images/KurtAvatar.svg" alt="Kurt Logo" />
        <div class="p-category">Software Engineer</div>
        <div class="p-note">
            My goal is to continue learning all that I can and to live on the bleeding edge of tech.
        </div>
    </div>
</div>
<div id="announcements" onclick="KurtLourens.clearAnnouncements()"></div>
<header id="header">
    <i id="darkModeSwitch" onclick="KurtLourens.darkModeToggle()" class="cursor-pointer icon icon-2x icon-brightness_4"></i>
    <div class="inner">
        <a href="https://kurtlourens.com" class="image avatar" title="Kurt Lourens avatar">
            <img src="assets/images/loader.svg" data-src="@Model.CvData.Details.Image" class="lazy" alt="Kurt Lourens Avatar" title="Kurt Lourens Avatar" />
        </a>
        <h1>
            <strong>Kurt Lourens</strong>&nbsp;
            <span>Software Engineer&nbsp;<br />
                <small>Red Ruby IT Co-Owner</small>
            </span>
        </h1>
        @foreach (string description in Model.CvData.Details.Descriptions)
        {
            <h4>@description</h4>
        }
        <div id="pwa-install" class="mt-1 hidden cursor-pointer" onclick="KurtLourens.addToHomeScreen()">
            <img src="assets/images/pwa.png" class="max-h-50" alt="Install as PWA" />
        </div>
        <div>
            <a href="https://play.google.com/store/apps/details?id=com.kurt_lourens_cv" class="image"
               title="Kurt Lourens CV App" alt="PlayStoreBadge" target="_blank" rel="noopener noreferrer">
                <img src="assets/images/playStore.png" class="max-h-50" alt="PlayStoreBadge" />
            </a>
        </div>
    </div>
</header>

<div id="main">
    <section id="about">
        <header class="major">
            <h2>About Kurt Lourens&nbsp;</h2>
            <i><a href="https://about.me/kurt.lourens" target="_blank" rel="noopener noreferrer" title="about.me" alt="about.me">about.me/kurt.lourens</a></i>
        </header>
        <p>
            I found a love for computers in boarding school, I would spend many if not all break times playing games and programming (then using Delphi). My interest in I.T. grew as I entered University to study a BSC I.T. to become a&nbsp;Software Engineer. During my degree I found like minded individuals and joined&nbsp;
            <strong>
                <a href="https://www.redrubyit.co.za" class="color-ruby" target="_blank" rel="noopener noreferrer" title="RedRubyIT" alt="RedRubyIT">Red Ruby IT</a>
            </strong>&nbsp;as a Co-Owner. I have learned so much from working at&nbsp;
            <strong>
                <a href="https://www.redrubyit.co.za" class="color-ruby" target="_blank" rel="noopener noreferrer" title="RedRubyIT" alt="RedRubyIT">
                    Red Ruby IT
                </a>
            </strong>&nbsp; and I am so lucky to be doing something that I love. My goal is to continue learning all that I can and to live on the bleeding edge of tech until it bites me in the ass 😂. I am currently living in&nbsp;<a href="https://goo.gl/maps/94uXM5Mgd362" target="_blank" rel="noopener noreferrer" title="Johannesburg, South africa">&nbsp;Johannesburg, South Africa 🌍
            </a>.
        </p>
        <small>
            P.S. I also have a&nbsp;
            <strong>
                <a href="https://blog.kurtlourens.com" target="_blank" rel="noopener noreferrer" title="Kurt's blog">blog</a>
            </strong>, Inside my Mind - by Kurt Lourens. I haven't been making use of it as much as I could have, but I have written an article on it about how I made this site and all the effort I put in to make it the best that it could be&nbsp;
            <strong>
                <a href="https://blog.kurtlourens.com/kurtlourens-com-redesigned/" target="_blank" rel="noopener noreferrer" title="Kurt's blog">click here to read it</a>
            </strong>&nbsp;😁.&nbsp;
        </small>
        <small>
            <strong>
                Proudly&nbsp;
                <a href="https://goo.gl/maps/hiGXkzqRBuz" target="_blank" rel="noopener noreferrer" title="South Africa">
                    South African
                </a>
            </strong>
        </small>
    </section>

    <section id="work">
        <h2 class="noselect" onclick="KurtLourens.toggleChildRowVisibility('work')">
            Work Experience&nbsp;<i class="icon icon-chevron-up upsideDown"></i>
        </h2>
        <div class="row" style="display: none;">
            @foreach (WorkExperience work in Model.CvData.WorkExperiences)
            {
                <article class="col-6 col-12-large col-12-medium col-12-small col-12-xsmall work-item">
                    <div class="card">
                        <div class="top-right">
                            <img src="@work.Image" class="company lazy invert" alt="@work.ImageAlt"><br>
                            @if (!string.IsNullOrEmpty(work.TimePeriodTextAlt))
                            {
                                <span class="tool" data-tip="@work.TimePeriodTextAlt">
                                    <p class="label @work.TimePeriodClass">@work.TimePeriodText</p>
                                </span>
                            }
                            else
                            {
                                <p class="label @work.TimePeriodClass">@work.TimePeriodText</p>
                            }
                        </div>
                        <h2>
                            <strong>@work.Title</strong>
                            <small>@work.Location</small>
                        </h2>
                        <p>@work.Content</p>
                    </div>
                </article>
            }
        </div>
    </section>

    <section id="projects">
        <h2 class="noselect" onclick="KurtLourens.toggleChildRowVisibility('projects')">
            Projects&nbsp;<i class="icon icon-chevron-up upsideDown"></i>
        </h2>
        <div class="row" style="display: none;">
            @foreach (Project proj in Model.CvData.Projects)
            {
                <article class="col-6 col-12-large col-12-medium col-12-small col-12-xsmall work-item">
                    <div class="card">
                        <div class="top-right">
                            <img src="@proj.Image" class="company lazy invert" alt="@proj.ImageAlt"><br>
                            @if (!string.IsNullOrEmpty(proj.TimePeriodTextAlt))
                            {
                                <span class="tool" data-tip="@proj.TimePeriodTextAlt">
                                    <p class="label @proj.TimePeriodClass">@proj.TimePeriodText</p>
                                </span>
                            }
                            else
                            {
                                <p class="label @proj.TimePeriodClass">@proj.TimePeriodText</p>
                            }
                        </div>
                        <h2>
                            <strong>@proj.Title</strong>
                            @if (proj.Links != null && proj.Links.Count > 0)
                            {
                                <small>
                                    @for (int linkIndex = 0; linkIndex < proj.Links.Count; linkIndex++)
                                    {
                                        Link link = proj.Links[linkIndex];

                                        string linkUrl = (link.Url.Contains('?')
                                            ? link.Url + '&'
                                            : link.Url + '?') + "ref=kurtlourens.com";
                                        <a href="@linkUrl" target="_blank" rel="noopener noreferrer" title="@link.Alt" alt="@link.Alt">
                                            @if (linkIndex > 0)
                                            {
                                                @(", " + link.Text)
                                            }
                                            else
                                            {
                                                @link.Text
                                            }
                                        </a>
                                    }
                                </small>
                            }
                            else
                            {
                                <small>@proj.Location</small>
                            }
                        </h2>
                        <p>@proj.Content</p>
                    </div>
                </article>
            }
        </div>
    </section>

    <section id="certificates">
        <h2 class="noselect" onclick="KurtLourens.toggleChildRowVisibility('certificates')">
            Certificates&nbsp;<i class="icon icon-chevron-up upsideDown"></i>
        </h2>
        <div class="row" style="display: none;">
            @foreach (Certificate cert in Model.CvData.Certificates)
            {
                <article class="col-6 col-12-large col-12-medium col-12-small col-12-xsmall work-item">
                    <div class="card">
                        <div class="top-right">
                            <img src="@cert.Image" class="company lazy invert" alt="@cert.ImageAlt"><br>
                            @if (!string.IsNullOrEmpty(cert.TimePeriodTextAlt))
                            {
                                <span class="tool" data-tip="@cert.TimePeriodTextAlt">
                                    <p class="label @cert.TimePeriodClass">@cert.TimePeriodText</p>
                                </span>
                            }
                            else
                            {
                                <p class="label @cert.TimePeriodClass">@cert.TimePeriodText</p>
                            }
                        </div>
                        <h2>
                            <strong>@cert.Title</strong>
                            <small>@cert.Location</small>
                        </h2>
                        <p>@cert.Content</p>
                        <div class="pretty-button-container">
                            @foreach (Link button in (cert.Buttons ?? new List<Link>()))
                            {
                                <a href="@button.Url" target="_blank" rel="noopener noreferrer" class="pretty-button -blue" title="@button.Alt" alt="@button.Alt">@button.Text</a>
                            }
                        </div>
                    </div>
                </article>
            }
        </div>
    </section>

    <section id="aboutThisSite">
        <h2 class="noselect" onclick="KurtLourens.toggleChildRowVisibility('aboutThisSite')">
            About this Website <i class="icon icon-chevron-up upsideDown"></i>
        </h2>
        <div class="row" style="display: none;">
            <p>
                I originally built this website while I was in university. I had very little understanding of html, css, and javascript. I mostly copy-pasted html with inline styles and grabbed javascript from Stack Overflow to make the site 'work'. Around the&nbsp;
                <small class="label label-kurt">19th November 2018</small>
                &nbsp;I started rebuilding the site with the intention of making it small, fast, SEO friendly and to apply as much of what I had learned onto the new site. I wrote a blog post about the redesign&nbsp;
                <strong>
                    <a href="https://blog.kurtlourens.com/kurtlourens-com-redesigned/" target="_blank" rel="noopener noreferrer" title="Kurt's blog post on kurtlourens.com redesign"> click here to read it</a>
                </strong>.
            </p>
            <div class="col-12">
                <span>As part of the redesign this website has an automated CI / CD pipeline:&nbsp;</span>
                <img src="https://khaoznet.visualstudio.com/KhaozNet/_apis/build/status/KhaozNet.CV.v2%20-%20CI" alt="Website build status" />
                <img src="https://vsrm.dev.azure.com/khaoznet/_apis/public/Release/badge/b5441643-fd7c-4330-92d7-bffc23a7e0a4/15/20" alt="Website deployment status" />
            </div>
            <div class="col-12">
                <span>
                    The&nbsp;
                    <strong>
                        <a href="https://play.google.com/store/apps/details?id=com.kurt_lourens_cv" target="_blank" rel="noopener noreferrer" title="GooglePlayStoreKurt'sCVApp" alt="GooglePlayStoreKurt'sCVApp">Flutter CV App</a>
                    </strong>&nbsp;also has an automated CI / CD pipeline:&nbsp;
                </span>
                <img src="https://khaoznet.visualstudio.com/KhaozNet/_apis/build/status/KhaozNet.FlutterCV%20-%20CI" alt="Website build status" />
                <img src="https://khaoznet.vsrm.visualstudio.com/_apis/public/Release/badge/b5441643-fd7c-4330-92d7-bffc23a7e0a4/18/25" alt="Website deployment status" />
            </div>
            <div class="col-12">
                <p>
                    I created a blog post about my Flutter App's CI / CD pipeline,&nbsp;
                    <strong>
                        <a href="https://blog.kurtlourens.com/flutter-with-ci-cd/" target="_blank" rel="noopener noreferrer" title="Kurt's blog post on Flutter with CI CD">click here to read it</a>
                    </strong>.
                </p>
            </div>
        </div>
    </section>
</div>

<footer id="footer">
    <div class="inner">
        <ul class="icons">
            @foreach (SocialLink social in Model.CvData.Details.SocialLinks)
            {
                string linkUrl = (social.Link.Contains('?')
                    ? social.Link + '&'
                    : social.Link + '?') + "ref=kurtlourens.com";

                if (!string.IsNullOrEmpty(social.Image))
                {
                    <li>
                        <a href="@linkUrl" rel="noopener noreferrer me" class="@social.ClassNames" alt="@social.Title" title="@social.Title" aria-label="@social.Title">
                            <img src="@social.Image" class="@social.ClassNames" alt="@social.Title" title="@social.Title" aria-label="@social.Title" />
                        </a>
                    </li>
                    continue;
                }

                if (!string.IsNullOrEmpty(social.OnClick))
                {
                    <li>
                        <a href="@linkUrl" rel="noopener noreferrer me" onclick="KurtLourens.sendEmail();" class="@social.ClassNames" alt="@social.Title" title="@social.Title" aria-label="@social.Title"></a>
                    </li>
                    continue;
                }

                <li>
                    <a href="@linkUrl" rel="noopener noreferrer me" class="@social.ClassNames" alt="@social.Title" title="@social.Title" aria-label="@social.Title"></a>
                </li>
            }
        </ul>
        <ul class="copyright">
            <li>
                &copy; Kurt Lourens
            </li>
        </ul>
    </div>
</footer>